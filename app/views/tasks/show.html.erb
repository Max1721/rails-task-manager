<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p>
    <% if @task.completed %>
      <i class="fa fa-check-square-o">This task is completed</i>
    <% else %>
      <i class="fa fa-square-o">This task is not completed</i>
    <% end %>
</p>
<p><%= link_to "Back to list", tasks_path %></p>
<p><%= link_to "Edit this task", edit_path %></p>
